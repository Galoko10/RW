<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:background="@color/colorPrimaryDark"
tools:context="com.example.gabriel.rw3.LoginActivity">


    <ImageView

        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/RGIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:textColorHint="#b3b3b3"
        android:hint="RGI"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <EditText

        android:id="@+id/Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RGIL"
        android:layout_centerHorizontal="true"
        android:textColorHint="#b3b3b3"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/Lembrarsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/RGIL"
        android:layout_below="@id/Senha"
        android:layout_marginBottom="10dp"
        android:text="Lembrar credenciais"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnLoginToMain"
        style="@style/AppTheme.Button"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/Lembrarsenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_color2"
        android:fontFamily="sans-serif"
        android:text="@string/btn_login"
        android:textColor="@color/color02"
        android:textSize="20dp"
        android:visibility="visible" />

</RelativeLayout>