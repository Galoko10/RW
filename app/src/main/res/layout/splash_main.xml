<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.gabriel.rw3.SplashActivity">


    <ImageView

        android:id="@+id/imagelogoetexto"
        android:layout_width="221dp"
        android:layout_height="321dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/logoetexto" />

    <Button
        android:id="@+id/buttonLogin"
        style="@style/AppTheme.Button"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:layout_below="@id/imagelogoetexto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_color2"
        android:fontFamily="sans-serif"
        android:onClick="irParaTelaLogin"
        android:text="@string/btn_login"
        android:textColor="@color/color02"
        android:textSize="18dp"
        android:visibility="visible" />


    <Button
        android:id="@+id/buttonCadastrar"
        style="@style/AppTheme.Button"
        android:layout_width="259dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:onClick="irParaTelaCadastro"
        android:padding="5dp"
        android:text="@string/btn_cadastrar"
        android:textColor="@drawable/text_color"
        android:textSize="18dp"
        android:visibility="visible"
      />



</RelativeLayout>